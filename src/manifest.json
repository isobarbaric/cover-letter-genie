{
  "manifest_version": 3,
  "name": "Cover Letter Genie",
  "version": "1.0",
  "description": "A chrome extension to generate a cover letter for WaterlooWorks job postings.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/black-icon16.png",
      "48": "icons/black-icon48.png",
      "128": "icons/black-icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content.bundle.js"
      ]
    }
  ]
}
